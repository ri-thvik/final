<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>RapidRide Driver</title>
    <link rel="stylesheet" href="css/driver.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.socket.io/4.6.0/socket.io.min.js"></script>
</head>

<body>
    <!-- Splash Screen -->
    <div id="splash-screen" class="splash-screen">
        <div class="splash-content">
            <div class="splash-logo">
                <i class="fas fa-steering-wheel"></i>
            </div>
            <h1 class="splash-title">RapidRide Driver</h1>
            <p class="splash-tagline">Drive. Earn. Grow.</p>
            <div class="splash-loader"></div>
        </div>
    </div>

    <!-- Auth Screen -->
    <div id="auth-screen" class="screen" style="display: none;">
        <div class="auth-container">
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-steering-wheel"></i>
                </div>
                <h1>Driver Login</h1>
                <p>Enter your registered phone number</p>
            </div>

            <div class="auth-form">
                <div class="input-group">
                    <div class="input-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <input type="tel" id="phone" placeholder="Phone Number" maxlength="10">
                </div>

                <button class="btn-primary" onclick="handleLogin()">
                    <span>Login</span>
                    <i class="fas fa-arrow-right"></i>
                </button>

                <p class="auth-footer">
                    New driver? <a href="#" onclick="showOnboarding()">Register here</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Main Dashboard -->
    <div id="main-screen" class="screen" style="display: none;">
        <!-- Top Bar -->
        <div class="top-bar">
            <div class="driver-status">
                <div class="status-indicator" id="status-indicator">
                    <div class="status-dot offline"></div>
                    <span id="status-text">Offline</span>
                </div>
            </div>
            <button class="menu-btn" onclick="toggleMenu()">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <!-- Side Menu -->
        <div class="side-menu" id="side-menu">
            <div class="menu-header">
                <div class="menu-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="menu-user-info">
                    <h3 id="menu-driver-name">Driver</h3>
                    <p id="menu-driver-phone">+91 XXXXXXXXXX</p>
                    <div class="driver-rating-badge">
                        <i class="fas fa-star"></i>
                        <span id="menu-driver-rating">4.8</span>
                    </div>
                </div>
            </div>
            <div class="menu-items">
                <a href="#" class="menu-item">
                    <i class="fas fa-history"></i>
                    <span>Trip History</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-wallet"></i>
                    <span>Earnings</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Performance</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-headset"></i>
                    <span>Support</span>
                </a>
                <a href="#" class="menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="#" class="menu-item" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>

        <!-- Map Container -->
        <div id="map-container" class="map-container">
            <div id="map" class="map-placeholder">
                <div class="map-overlay">
                    <i class="fas fa-map-marked-alt"></i>
                    <p>Map Loading...</p>
                </div>
            </div>
        </div>

        <!-- Offline Dashboard -->
        <div class="bottom-sheet offline-sheet" id="offline-sheet">
            <div class="sheet-handle"></div>

            <div class="offline-content">
                <div class="offline-icon">
                    <i class="fas fa-moon"></i>
                </div>
                <h2>You're Offline</h2>
                <p>Go online to start accepting ride requests</p>

                <button class="btn-go-online" onclick="goOnline()">
                    <i class="fas fa-power-off"></i>
                    <span>Go Online</span>
                </button>
            </div>

            <!-- Today's Summary -->
            <div class="summary-card">
                <h3>Today's Summary</h3>
                <div class="summary-stats">
                    <div class="stat-item">
                        <div class="stat-value">₹<span id="today-earnings">0</span></div>
                        <div class="stat-label">Earnings</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-value"><span id="today-trips">0</span></div>
                        <div class="stat-label">Trips</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-value"><span id="online-hours">0h</span></div>
                        <div class="stat-label">Online</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Online Dashboard -->
        <div class="bottom-sheet online-sheet" id="online-sheet" style="display: none;">
            <div class="sheet-handle"></div>

            <div class="online-header">
                <div class="online-status">
                    <div class="pulse-dot"></div>
                    <span>You're Online</span>
                </div>
                <button class="btn-go-offline" onclick="goOffline()">
                    Go Offline
                </button>
            </div>

            <div class="earnings-card">
                <div class="earnings-today">
                    <span class="earnings-label">Today's Earnings</span>
                    <span class="earnings-amount">₹<span id="live-earnings">0</span></span>
                </div>
                <div class="earnings-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 0%"></div>
                    </div>
                    <span class="progress-text">₹<span id="target-remaining">500</span> to reach daily target</span>
                </div>
            </div>

            <div class="quick-stats">
                <div class="quick-stat">
                    <i class="fas fa-route"></i>
                    <div>
                        <span class="quick-stat-value"><span id="live-trips">0</span></span>
                        <span class="quick-stat-label">Trips</span>
                    </div>
                </div>
                <div class="quick-stat">
                    <i class="fas fa-clock"></i>
                    <div>
                        <span class="quick-stat-value"><span id="live-hours">0h</span></span>
                        <span class="quick-stat-label">Online</span>
                    </div>
                </div>
                <div class="quick-stat">
                    <i class="fas fa-star"></i>
                    <div>
                        <span class="quick-stat-value">4.8</span>
                        <span class="quick-stat-label">Rating</span>
                    </div>
                </div>
            </div>

            <div class="waiting-message">
                <i class="fas fa-hourglass-half"></i>
                <p>Waiting for ride requests...</p>
            </div>
        </div>

        <!-- Ride Request Sheet -->
        <div class="bottom-sheet request-sheet" id="request-sheet" style="display: none;">
            <div class="sheet-handle"></div>

            <div class="request-header">
                <h3>New Ride Request</h3>
                <div class="request-timer">
                    <i class="fas fa-clock"></i>
                    <span id="accept-timer">8</span>s
                </div>
            </div>

            <div class="request-details">
                <div class="request-fare">
                    <span class="fare-label">Estimated Fare</span>
                    <span class="fare-amount">₹<span id="request-fare">0</span></span>
                </div>

                <div class="request-locations">
                    <div class="location-item">
                        <div class="location-icon pickup">
                            <i class="fas fa-circle"></i>
                        </div>
                        <div class="location-info">
                            <span class="location-label">Pickup</span>
                            <span class="location-address" id="request-pickup">Loading...</span>
                        </div>
                        <div class="location-distance">
                            <span id="pickup-distance">2.5 km</span>
                        </div>
                    </div>

                    <div class="location-divider"></div>

                    <div class="location-item">
                        <div class="location-icon drop">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="location-info">
                            <span class="location-label">Drop</span>
                            <span class="location-address" id="request-drop">Loading...</span>
                        </div>
                        <div class="location-distance">
                            <span id="trip-distance">5.2 km</span>
                        </div>
                    </div>
                </div>

                <div class="rider-info">
                    <div class="rider-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="rider-details">
                        <span class="rider-name" id="rider-name">Rider Name</span>
                        <div class="rider-rating">
                            <i class="fas fa-star"></i>
                            <span id="rider-rating">4.5</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="request-actions">
                <button class="btn-reject" onclick="rejectRequest()">
                    <i class="fas fa-times"></i>
                    Reject
                </button>
                <button class="btn-accept" onclick="acceptRequest()">
                    <i class="fas fa-check"></i>
                    Accept
                </button>
            </div>
        </div>

        <!-- Active Trip Sheet -->
        <div class="bottom-sheet trip-sheet" id="trip-sheet" style="display: none;">
            <div class="sheet-handle"></div>

            <div class="trip-status-bar">
                <div class="trip-status-indicator">
                    <div class="status-dot active"></div>
                    <span id="trip-status-text">Going to pickup</span>
                </div>
                <div class="trip-eta">
                    <i class="fas fa-clock"></i>
                    <span id="trip-eta">5 mins</span>
                </div>
            </div>

            <div class="trip-rider-card">
                <div class="rider-header">
                    <div class="rider-avatar-large">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="rider-info-main">
                        <h3 id="trip-rider-name">Rider Name</h3>
                        <div class="rider-rating-main">
                            <i class="fas fa-star"></i>
                            <span id="trip-rider-rating">4.5</span>
                        </div>
                    </div>
                    <div class="rider-actions">
                        <button class="icon-btn" onclick="callRider()">
                            <i class="fas fa-phone"></i>
                        </button>
                        <button class="icon-btn" onclick="chatRider()">
                            <i class="fas fa-comment"></i>
                        </button>
                    </div>
                </div>

                <div class="trip-otp-card" id="trip-otp-card">
                    <span class="otp-label">OTP</span>
                    <span class="otp-value" id="trip-otp-display">----</span>
                </div>
            </div>

            <div class="trip-route-info">
                <div class="route-item">
                    <div class="route-icon pickup">
                        <i class="fas fa-circle"></i>
                    </div>
                    <div class="route-details">
                        <span class="route-label">Pickup</span>
                        <span class="route-address" id="trip-pickup-address">Loading...</span>
                    </div>
                </div>

                <div class="route-divider"></div>

                <div class="route-item">
                    <div class="route-icon drop">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="route-details">
                        <span class="route-label">Drop</span>
                        <span class="route-address" id="trip-drop-address">Loading...</span>
                    </div>
                </div>
            </div>

            <button class="btn-primary btn-trip-action" id="trip-action-btn" onclick="handleTripAction()">
                <span id="trip-action-text">Start Trip</span>
                <i class="fas fa-arrow-right"></i>
            </button>

            <button class="btn-danger btn-cancel-trip" onclick="cancelTrip()">
                Cancel Trip
            </button>
        </div>

        <!-- Trip Complete Sheet -->
        <div class="bottom-sheet complete-sheet" id="complete-sheet" style="display: none;">
            <div class="sheet-handle"></div>

            <div class="complete-icon">
                <i class="fas fa-check-circle"></i>
            </div>

            <h2>Trip Completed!</h2>

            <div class="complete-earnings">
                <span class="complete-label">You Earned</span>
                <span class="complete-amount">₹<span id="complete-fare">0</span></span>
            </div>

            <div class="complete-details">
                <div class="complete-detail-item">
                    <span class="detail-label">Distance</span>
                    <span class="detail-value"><span id="complete-distance">0</span> km</span>
                </div>
                <div class="complete-detail-item">
                    <span class="detail-label">Duration</span>
                    <span class="detail-value"><span id="complete-duration">0</span> mins</span>
                </div>
            </div>

            <button class="btn-primary" onclick="finishTrip()">
                <span>Continue</span>
                <i class="fas fa-arrow-right"></i>
            </button>
        </div>
    </div>

    <script src="js/driver.js"></script>
</body>

</html>